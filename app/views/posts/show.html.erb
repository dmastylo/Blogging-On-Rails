<% provide(:title, @post.title) %>
<div class="row">
    <div class="span8">
        <span class="title">
            <h3><%= @post.title %></h3>
        </span>
        <span class="content">
            <%= @post.content %>
        </span>
        <span class = "content">
            <%= @post.category %>
        </span>
        <span class="timestamp">
            Posted <%= time_ago_in_words(@post.created_at) %> ago.
        </span>
    </div>
</div>
<div class="row">
    <%= form_for(@comment) do |f| %>
        <%= f.text :author, placeholder: "Name" %>
        <%= f.text :email, placeholder: "Email" %>
        <div class="field">
            <%= f.text_area :content, placeholder: "Compose new comment..." %>
        </div>
        <%= f.submit "Post", class: "btn btn-large btn-primary" %>
    <% end %>
</div>